\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{codestyles}

\RequirePackage{listings}
\RequirePackage{xcolor}
\RequirePackage{textcomp}

\definecolor{cpp-keyword}{RGB}{197,134,192}
\definecolor{cpp-keyword1}{HTML}{F92672}
\definecolor{cpp-keyword2}{HTML}{569CD6}
\definecolor{cpp-keyword3}{HTML}{F92672}
\definecolor{cpp-keyword4}{HTML}{622CBC}

\definecolor{cpp-string}{HTML}{FD971F}
\definecolor{cpp-comment}{HTML}{008000}

\lstdefinelanguage[myC]{C}%
  {
      keywords= [1]{break,case,continue,default,do,else,enum,extern,%
        for,goto,if,return,sizeof,static,struct,switch,typedef,union,%
        ,using,volatile,while}, % primary commands
      morekeywords = [2]{auto,bool,char,double,float,int,long,short,void,}, % primitive types
      morekeywords = [3]{const,signed,unsigned,}, % type related
      morekeywords = [4]{main,printf,}, % functions
   sensitive = true,%
   morecomment=[s]{/*}{*/},%
   morecomment=[l]//,% nonstandard
   morestring=[b]",%
   morestring=[b]',%
   moredelim=*[directive]\#,%
   moredirectives={define,elif,else,endif,error,if,ifdef,ifndef,line,%
      include,pragma,undef,warning}%
  }[keywords,comments,strings,directives]%

\lstdefinestyle{cpp-code}{
    language = {[myC] C},
    basicstyle=\normalsize\ttfamily,
    keywordstyle={[1]\color{cpp-keyword1}},
    keywordstyle={[2]\color{cpp-keyword2}},
    keywordstyle={[3]\color{cpp-keyword3}},
    keywordstyle={[4]\color{cpp-keyword4}},
    stringstyle=\color{cpp-string},
    commentstyle=\color{cpp-comment},
    breaklines=true,
}




